<div ng-controller="quizController">

<div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Quiz App.</h2>
                </div>
            </div>
            
            <form class="form-horizontal">
  <div class="form-group">
    <label for="inputQuiz" class="col-sm-2 control-label">Quiz</label>
    <div class="col-sm-10">
      <!--<input type="text" class="form-control" id="inputQuiz" name="inputQuiz" placeholder="Quiz">-->
      <textarea class="form-control" rows="3" placeholder="type your quiz" ng-model="Quiz"></textarea>
    </div>
  </div>
  <div class="form-group form-inline">
    <label for="inputAnswer" class="col-sm-2 control-label">Answer</label>
    <div class="col-sm-10">
      <!--<input type="text" class="form-control" id="inputAnswer" placeholder="Answer">-->
      <textarea class="form-control" rows="3" placeholder="type your answer" ng-model="Answer"></textarea>
	  <div class="checkbox">
        <label>
          <input type="checkbox" ng-model="IsTrue"> It is Correct Answer
        </label>
      </div>
	  <button class="btn btn-info" ng-click="AddAnswer();"><b>+</b></button>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div ng-if="(Answers.length > 0)">
      <strong>Answers</strong>
      <ul>
      <li ng-repeat="x in Answers">{{x.Answer}} | {{x.IsTrue}}</li>
      </ul>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" ng-click="SubmitQuiz();">Add Quiz</button>
    </div>
  </div>
</form>

            
</div>


</div>
